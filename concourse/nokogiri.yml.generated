resource_types:
- name: irc-notification
  source:
    repository: flavorjones/irc-notification-resource
  type: registry-image
- name: webhook-notification
  source:
    repository: flavorjones/webhook-notification-resource
    tag: latest
  type: registry-image
resources:
- icon: cog
  name: ci
  source:
    branch: master
    disable_ci_skip: true
    uri: https://github.com/sparklemotion/nokogiri/
  type: git
- icon: bell
  name: irc
  source:
    channel: '#nokogiri'
    password: ((nokobot-irc-password))
    port: 7070
    server: chat.freenode.net
    user: ((nokobot-irc-username))
  type: irc-notification
- icon: bell
  name: gitter
  source:
    adapter: GitterActivityFeedAdapter
    url: ((nokogiri-gitter-channel-webhook-url))
  type: webhook-notification
- icon: github
  name: nokogiri
  source:
    branch: master
    ignore_paths:
    - '*.md'
    - concourse/**
    - suppressions/**
    - .github/**
    - Vagrantfile
    uri: https://github.com/sparklemotion/nokogiri/
  type: git
