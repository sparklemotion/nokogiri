      image_resource:
        source:
          repository: flavorjones/nokogiri-test
          tag: bionic
        type: registry-image
      inputs:
      - name: ci
      - name: nokogiri
      params:
        TEST_WITH_SYSTEM_LIBRARIES: t
      platform: linux
      run:
        path: ci/concourse/tasks/rake-test/run.sh
    task: rake-test
  public: true
