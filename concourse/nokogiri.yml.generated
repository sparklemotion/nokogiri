  - name: gate
    public: true
    plan:
      - get: nokogiri
        trigger: true
        passed:
          - "ruby-2.3-valgrind"
          - "ruby-2.4-valgrind"
          - "ruby-2.5-valgrind"
          - "ruby-2.6-valgrind"
          - "jruby-9.2"


  - name: ruby-vanilla-system
