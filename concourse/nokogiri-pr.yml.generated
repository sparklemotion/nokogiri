          tag: bionic
        type: registry-image
      inputs:
      - name: ci
      - name: nokogiri-pr
        path: nokogiri
      params:
        NOKOGIRI_USE_SYSTEM_LIBRARIES: t
      platform: linux
      run:
        path: ci/concourse/tasks/rake-test/run.sh
    task: rake-test
  public: true
