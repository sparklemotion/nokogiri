jobs:
- name: pr-pending
  plan:
  - get: ci
  - get: nokogiri-pr
    trigger: true
    version: every
  - params:
      path: nokogiri-pr
      status: PENDING
    put: nokogiri-pr
  public: true
- name: cruby-on-vanilla-ubuntu
  on_failure:
    in_parallel:
      steps:
      - params:
          message: ($BUILD_PIPELINE_NAME/$BUILD_JOB_NAME) The build failed ($BUILD_URL)
        put: nokogiri-irc
      - params:
          path: nokogiri-pr
          status: FAILURE
        put: nokogiri-pr
  plan:
  - get: ci
  - get: nokogiri-pr
    passed:
    - pr-pending
    trigger: true
    version: every
  - config:
      image_resource:
