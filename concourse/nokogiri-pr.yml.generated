resource_types:
- name: irc-notification
  source:
    repository: flavorjones/irc-notification-resource
  type: registry-image
- name: pull-request
  source:
    repository: teliaoss/github-pr-resource
  type: registry-image
resources:
- icon: cog
  name: ci
  source:
    branch: master
    disable_ci_skip: true
    uri: https://github.com/sparklemotion/nokogiri/
  type: git
- icon: bell
  name: nokogiri-irc
  source:
    channel: '#nokogiri'
    password: {{nokobot-irc-password}}
    port: 7070
    server: chat.freenode.net
    user: {{nokobot-irc-username}}
  type: irc-notification
- check_every: 15m
  icon: github
  name: nokogiri-pr
  source:
    access_token: ((github-repo-status-access-token))
    ignore_paths:
    - '*.md'
    - concourse/**
    - suppressions/**
    - .github/**
    - Vagrantfile
    repository: sparklemotion/nokogiri
  type: pull-request
  webhook_token: ((nokogiri-pr-webhook-token))
