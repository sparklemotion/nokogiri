# -*- yaml -*-
---
# this regex is what `rake check_manifest` should consider excluded from the gem
exclude: !ruby/regexp '/
(^\.\/
  ((\.git
    |.yardoc
    |concourse
    |gems
    |ports
    |suppressions
    |tasks
    |test
    |tmp
  )\/)
  |\.(autotest
     |cross_rubies
     |editorconfig
     |gemtest
     |github
     |gitignore
     |hoerc
     |travis\.yml
     )
  |Gemfile.*
  |Manifest.txt
  |Rakefile
  |appveyor\.yml
  |CHANGELOG.md
  |CODE_OF_CONDUCT.md
  |CONTRIBUTING.md
  |ROADMAP.md
  |SECURITY.md
  |STANDARD_RESPONSES.md
  |Vagrantfile
  |Y_U_NO_GEMSPEC.md
  |C_CODING_STYLE.*
  |scripts
  |patches
)
|\.gitkeep
/x'
